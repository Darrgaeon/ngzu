- var itemsInGallery = 6;
.product-head
    .product-head-gallery-container
        .product-gallery
            each _ in Array(itemsInGallery)
                .product-gallery__slide
                    img(src="img/photo-right.jpg" data-rjs="2" alt="photo")

        .product-gallery-nav-container
            .product-gallery-nav-button.prev
                +add_svg({class: "product-gallery-nav-button__icon", icon: "gallery-nav-arrow"})

            .product-gallery-nav
                each _ in Array(itemsInGallery)
                    .product-gallery-nav__slide
                        img(src="img/welding.jpg" data-rjs="2" alt="photo")

            .product-gallery-nav-button.next
                +add_svg({class: "product-gallery-nav-button__icon", icon: "gallery-nav-arrow"})


    .product-specs-wrapper
        .product-specs
            table.specs-table
                thead
                    tr
                        th Мощность
                        th кВт
                        th кВА
                tbody
                    tr
                        td.td-color-grey Основная мощность
                        td 10,8
                        td 13,5
                    tr
                        td.td-color-grey Резервная мощность
                        td 11,9
                        td 14,9

            .other-specs
                span.span-color-grey Двигатель:
                    span  SC9D3GB3 <br/>
                span.span-color-grey  Напряжение:
                    span  400 В


        include ./calculator
